<article class="post-partial">
<h3> 
<%= link_to(post.title, user_post_path(id: post.id, user_id: post.author_id)) %>
</h3>
<p><%= truncate(post.text, length: 125) ... %></p>
  <div class="post-stats">
    <span>Comments <%= post.commentsCounter %> &nbsp;,&nbsp;</span>
    <span>Likes <%= post.likesCounter %></span>
  </div>
</article> 